<p id="notice"><%= notice %></p>

<h2 class="text-center">Posts</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post, style: 'color:blue;', class: 'post-title' %></td>
        <td>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default btn-sm text-muted' %>
          <%= link_to "<i class='fa fa-trash'></i>".html_safe, post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm text-muted', style: 'color:#333;' %>
            
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-sm' %>
